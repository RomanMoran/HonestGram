<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/menuBody"
    android:layout_width="match_parent"
    android:layout_height="20dp"
    android:gravity="center_vertical"
    android:orientation="vertical"
    android:layout_marginTop="8dp"
    android:layout_marginBottom="6dp"
    >

    <ImageView
        android:id="@+id/menuImageView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintBottom_toBottomOf="parent"
        android:paddingBottom="6dp"
        android:layout_marginStart="23dp"
        android:paddingTop="6dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/menuTitleTextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="23dp"
        android:layout_marginStart="25dp"
        android:gravity="center_vertical"
        android:textColor="@color/blackTextColor"
        android:textSize="16sp"
        app:layout_constraintBottom_toBottomOf="@+id/menuImageView"
        app:layout_constraintEnd_toStartOf="@+id/countTextView"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toEndOf="@+id/menuImageView"
        app:layout_constraintTop_toTopOf="@+id/menuImageView"
        tools:text="tedst" />

    <TextView
        android:id="@+id/countTextView"
        style="@style/NgseBadgeItem"
        android:visibility="gone"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        tools:text="3" />


    <!--<include layout="@layout/margin_separator" />-->

</android.support.constraint.ConstraintLayout>