    <style name="EditTextStyle">
        <item name="android:maxLines">1</item>
        <item name="android:gravity">center_horizontal</item>
        <item name="android:fontFamily">sans-serif-light</item>
        <item name="android:textSize">@dimen/big_text_size</item>
        <item name="android:paddingTop">13dp</item>
        <item name="android:paddingBottom">14dp</item>
        <item name="android:textColor">@color/blackTextColor</item>
        <item name="android:textColorHint">@color/colorTextHint</item>
        <item name="android:background">@drawable/rounded_button_color_white</item>
    </style>

    <!-- ToolBar -->
    <style name="ToolBarStyle" parent="Theme.AppCompat">
        <item name="android:textColorPrimary">@color/blackTextColor</item>
        <item name="android:textColorSecondary">@color/blackTextColor</item>
