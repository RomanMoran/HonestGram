        <item name="android:layout_height">wrap_content</item>
        <item name="android:textSize">@dimen/x_small_text_size</item>
        <item name="android:layout_marginLeft">@dimen/default_padding</item>
        <item name="android:layout_marginRight">@dimen/default_padding</item>
        <item name="android:paddingLeft">@dimen/default_drawable_padding</item>
        <item name="android:paddingRight">@dimen/default_drawable_padding</item>
